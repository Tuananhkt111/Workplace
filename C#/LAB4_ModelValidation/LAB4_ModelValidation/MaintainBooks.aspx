<%@ Page Language="C#" AutoEventWireup="true" CodeBehind="MaintainBooks.aspx.cs" Inherits="LAB4_ModelValidation.MaintainBooks" %>

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <title></title>
</head>
<body>
    <form id="form1" runat="server">
        <div>
            <div>
                <div>
                    <asp:GridView ID="gvBookList" runat="server" AutoGenerateDeleteButton="True" AutoGenerateEditButton="True">
                    </asp:GridView>
                    <asp:FormView ID="fvProductDetail" runat="server" DefaultMode="Insert" ItemType="Book" InsertMethod="fvProductDetail_InsertBook">
                        <ItemTemplate>
                            <div>
                                <div>
                                    <div>
                                    </div>
                                    <asp:Label ID="Label2" runat="server" Text="BookID"></asp:Label>
                                    <asp:TextBox ID="txtID" runat="server" Style="margin-left: 73px"></asp:TextBox>
                                </div>
                            </div>
                            <div>
                                <asp:Label ID="Label3" runat="server" Text="BookTitle"></asp:Label>
                                <asp:TextBox ID="txtTitle" runat="server" Style="margin-left: 55px"></asp:TextBox>
                            </div>
                            <div>
                                <asp:Label ID="Label4" runat="server" Text="BookPrice"></asp:Label>
                                <asp:TextBox ID="txtPrice" runat="server" Style="margin-left: 50px"></asp:TextBox>
                                <div>
                                    <asp:Label ID="Label5" runat="server" Text="BookQuantity"></asp:Label>
                                    <asp:TextBox ID="txtQuantity" runat="server" Style="margin-left: 25px"></asp:TextBox>
                                </div>
                            </div>
                        </ItemTemplate>
                    </asp:FormView>
                </div>
            </div>
        </div>
    </form>
</body>
</html>
