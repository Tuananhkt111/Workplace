<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC
  		"-//Apache Struts//XWork Validator 1.0.3//EN"
  		"http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
    <field name="id">
        <field-validator type="requiredstring">
            <message>ID can't be blank</message>
        </field-validator>
        <field-validator type="regex">
            <param name="regex">NEWS-[A-Z]{4}-[0-9]{5}</param>
            <message>ID format is NEWS-AAAA-XXXXX , With A is a character from ‘A’  ‘Z’ and X is a digit from ‘0’ to ‘9’</message>
        </field-validator>
    </field>
    <field name="title">
        <field-validator type="requiredstring">
            <message>Title can't be blank</message>
        </field-validator>
    </field>
    <field name="shortDes">
        <field-validator type="requiredstring">
            <message>Short description can't be blank</message>
        </field-validator>
    </field>
    <field name="des">
        <field-validator type="requiredstring">
            <message>Description can't be blank</message>
        </field-validator>
    </field> 
    <field name="author">
        <field-validator type="requiredstring">
            <message>Author can't be blank</message>
        </field-validator>
    </field>
</validators>

