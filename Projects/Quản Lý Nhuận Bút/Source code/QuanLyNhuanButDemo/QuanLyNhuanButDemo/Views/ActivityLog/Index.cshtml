
@{
    ViewData["Title"] = "NhatKyHoatDong";
}
<!-- DataTables Example -->
<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-clipboard-list"></i>
        Nhật ký hoạt động
    </div>
    <div class="card-body">
        <form class="form-inline" id="search-log" method="POST">
            <div class="form-group">
                <label for="dateExecuted"><strong>Ngày thực hiện</strong></label>
                <div class="flex-column">
                    <input type="text" class="form-control ml-2" placeholder="" name="dateExecuted" id="dateExecuted" value="@DateTime.Now.ToString("dd/MM/yyyy")">
                </div>
                <button type="button" id="toggle1" class="btn btn-secondary">
                    <i class="far fa-calendar-alt"></i>
                </button>
            </div>
            <button type="submit" class="btn btn-success ml-2">Tìm kiếm</button>
        </form>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover animated fadeIn" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Hoạt động</th>
                        <th>Mô tả</th>
                        <th>Tên đăng nhập</th>
                        <th>Tên</th>
                        <th>Chức vụ</th>
                        <th>Thời gian thực hiện</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Hoạt động</th>
                        <th>Mô tả</th>
                        <th>Tên đăng nhập</th>
                        <th>Tên</th>
                        <th>Chức vụ</th>
                        <th>Thời gian thực hiện</th>
                    </tr>
                </tfoot>
                <tbody id="dataTable-body">
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Cập nhật lúc @DateTime.Now.ToString("dd/MM/yyyy hh:mm tt")</div>
</div>
@section NhatKyHoatDong {
    active
}
@section Scripts {
    <script src="~/lib/datatables/jquery.dataTables.js"></script>
    <script src="~/lib/datatables/dataTables.bootstrap4.js"></script>
    <script src="~/lib/moment/moment.min.js"></script>
    <script src="~/lib/datatables/datetime-moment.js"></script>
    <script src="~/js/activityLog.js"></script>
}
